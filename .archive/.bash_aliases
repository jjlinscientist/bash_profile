# Aliases for 'ls'
alias ls='ls -G --color'
alias ll='ls -l'
alias la='ls -a'
alias lall='ls -all'
alias lla='ls -all'
alias l1='ls -1'

# Aliases for 'pip'
alias pip='sudo pip'
alias pip-review='sudo pip-review --interactive'

# Aliases for 'htop'
alias htop='htop -s PERCENT_CPU'

# Aliases for tmux
#alias tmux='tmux -2'

# Aliases for ping
alias ping8="ping -c 5 8.8.8.8"

# Alias for nvim config
alias vim='vim -u ~/.vim/vimrc'
# alias nvim='nvim -u ~/.config/nvim/init.vim'

# Alias to start ssh-agent
alias sab='ssh-agent bash'
